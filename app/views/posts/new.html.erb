<%= simple_form_for :post, html: { class: 'action-page' } do |f| %>
  Image: <%= f.file_field :image, class: 'form-control' %>
  Caption: <%= f.text_area :content, class: 'form-control', autofocus: true,
          placeholder: 'Entertain us....' %>
  <%= f.submit "Update", class: 'btn btn-primary' %>
<% end %>
